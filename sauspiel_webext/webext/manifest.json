{
  "manifest_version": 2,
  "name": "sauspiel_webext",
  "version": "0.7",

  "content_scripts": [
    {
      "matches": ["*://*.sauspiel.de/forum/diskussionen/*"],
      "js": [
          "sauspiel_webext.js",
          "sauspiel_webext_diskussionen_content_script.js"
      ]
    },
    {
      "matches": ["*://*.sauspiel.de/spiele/*"],
      "js": [
          "sauspiel_webext.js",
          "sauspiel_webext_content_script.js"
      ]
    }
  ],

  "web_accessible_resources": [
      "web_worker.js",
      "sauspiel_webext_bg.wasm"
  ],

  "browser_specific_settings": {
    "gecko": {
      "id": "sauspiel_webext@openschafkopf.com"
    }
  }
}

